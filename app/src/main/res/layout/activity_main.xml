<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:orientation="vertical"
    tools:context="com.bkav.android.music.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recycleraAlbum"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:background="#c2c2a1"
        android:id="@+id/recycleraAlbum"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ImageAlbum"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:src="@drawable/khacviet" />

        <TextView
            android:id="@+id/NameSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:textColor="#000000"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ImageAlbum"
            android:layout_toEndOf="@+id/ImageAlbum" />

        <TextView
            android:id="@+id/NameAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Album"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/NameSong"
            android:layout_alignStart="@+id/NameSong" />

        <ImageView
            android:id="@+id/PlayPause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/pause"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp" />
    </RelativeLayout>
</RelativeLayout>
